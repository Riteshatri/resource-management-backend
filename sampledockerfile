# -------------------------------
# 1Ô∏è‚É£ Base image (Python 3.12)
# -------------------------------
FROM python:3.12-slim

# -------------------------------
# 2Ô∏è‚É£ Environment safety flags
# -------------------------------
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# -------------------------------
# 3Ô∏è‚É£ System dependencies
# (jo tum apt install kar rahe the)
# -------------------------------
RUN apt-get update && apt-get install -y \
    build-essential \
    unixodbc-dev \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# -------------------------------
# 4Ô∏è‚É£ Create non-root user (SECURITY)
# -------------------------------
RUN useradd -m backenduser

# -------------------------------
# 5Ô∏è‚É£ Working directory
# -------------------------------
WORKDIR /app

# -------------------------------
# 6Ô∏è‚É£ Copy requirements first
# (Docker cache optimization)
# -------------------------------
COPY requirements.txt .

# -------------------------------
# 7Ô∏è‚É£ Install Python dependencies
# -------------------------------
RUN pip install --no-cache-dir --upgrade pip \
    && pip install --no-cache-dir -r requirements.txt \
    && pip install gunicorn

# -------------------------------
# 8Ô∏è‚É£ Copy backend source code
# -------------------------------
COPY . .

# -------------------------------
# 9Ô∏è‚É£ Ownership + switch user
# -------------------------------
RUN chown -R backenduser:backenduser /app
USER backenduser

# -------------------------------
# üîü Expose backend port
# -------------------------------
EXPOSE 8000

# -------------------------------
# 1Ô∏è‚É£1Ô∏è‚É£ Start Backend (Gunicorn + Uvicorn)
# -------------------------------
CMD ["gunicorn", "app.main:app", \
     "--workers", "3", \
     "--worker-class", "uvicorn.workers.UvicornWorker", \
     "--bind", "0.0.0.0:8000", \
     "--timeout", "120"]


#  docker build -t resource-backend .
#  docker run -d --name resource-backend --env-file .env   -p 8000:8000 resource-backend